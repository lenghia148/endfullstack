<div class="mt-4 container">

  {{#with herbalTeas}}
    <div
      class="row pt-2 pb-2 shadow mb-5 bg-body rounded"
      style="border: none;background-image: linear-gradient(#FFFAD7,#F7F6F2)"
    >
      <div
        id="carouselExampleDark"
        class="carousel carousel-dark slide col-5"
        data-bs-ride="carousel"
      >
        <div class="carousel-indicators mt-3">
          <button
            type="button"
            data-bs-target="#carouselExampleDark"
            data-bs-slide-to="0"
            class="active me-3 mt-3 border rounded-2"
            aria-current="true"
            aria-label="Slide 1"
            style="height: 40px;width:40px;background-image:url({{this.image}});background-position: center"
          ></button>
          <button
            type="button"
            class="active me-3 mt-3 border rounded-2"
            data-bs-target="#carouselExampleDark"
            data-bs-slide-to="1"
            aria-label="Slide 2"
            style="height: 40px;width:40px;background-image:url({{this.image}});background-position: center"
          ></button>
          <button
            type="button"
            class="active me-3 mt-3 border rounded-2"
            data-bs-target="#carouselExampleDark"
            data-bs-slide-to="2"
            aria-label="Slide 3"
            style="height: 40px;width:40px;background-image:url({{this.image}});background-position: center"
          ></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active" data-bs-interval="10000">
            <img
              src="{{this.image}}"
              class="d-block w-100 "
              alt="..."
            />

          </div>
          <div class="carousel-item" data-bs-interval="2000">
            <img
              src="{{this.image}}"
              class="d-block w-100 "
              alt="..."
            />

          </div>
          <div class="carousel-item">
            <img
              src="{{this.image}}"
              class="d-block w-100 "
              alt="..."
            />

          </div>
        </div>
